@using Entities
@using Business

@inject NavigationManager NavManager 

<div>
    <EditForm Model="oWareHouse">
        <div class="form-group">
            <label>Referencia:</label>
            <InputText @bind-Value="oWareHouse.WareHouseId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nombre de bodega:</label>
            <InputText @bind-Value="oWareHouse.WareHouseName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Direccion:</label>
            <InputText @bind-Value="oWareHouse.WareHouseAddress" class="form-control" />
        </div>

        

        <input type="button" value="Agregar bodega" @onclick="SaveWareHouse" />
    </EditForm>
</div>

@code {
    WareHouseEntity oWareHouse = new WareHouseEntity();

    private void SaveWareHouse() {
        B_WareHouse.CreateWareHouse(oWareHouse);
        NavManager.NavigateTo("wareHouse/list");
    }

}
